    {
      "name": "Snippet Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/snippet/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "snippet", "check"]
            }
          }
        },
        {
          "name": "Create Python Snippet (Alice)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"snippetId\", jsonData.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{aliceToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Python Hello World\",\n  \"code\": \"print(\\\"Hello, World!\\\")\",\n  \"language\": \"python\",\n  \"description\": \"A simple Hello World program in Python\",\n  \"tags\": [\"python\", \"basics\", \"tutorial\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/snippet",
              "host": ["{{baseUrl}}"],
              "path": ["api", "snippet"]
            }
          }
        },
        {
          "name": "Create JavaScript Snippet (Alice)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{aliceToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"JavaScript Array Methods\",\n  \"code\": \"const numbers = [1, 2, 3, 4, 5];\\nconst doubled = numbers.map(n => n * 2);\\nconsole.log(doubled);\",\n  \"language\": \"javascript\",\n  \"description\": \"Demonstrates array map method\",\n  \"tags\": [\"javascript\", \"arrays\", \"es6\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/snippet",
              "host": ["{{baseUrl}}"],
              "path": ["api", "snippet"]
            }
          }
        },
        {
          "name": "Create Java Snippet (Alice)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{aliceToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Java Fibonacci\",\n  \"code\": \"public class Fibonacci {\\n    public static int fib(int n) {\\n        if (n <= 1) return n;\\n        return fib(n-1) + fib(n-2);\\n    }\\n}\",\n  \"language\": \"java\",\n  \"description\": \"Recursive Fibonacci implementation\",\n  \"tags\": [\"java\", \"algorithms\", \"recursion\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/snippet",
              "host": ["{{baseUrl}}"],
              "path": ["api", "snippet"]
            }
          }
        },
        {
          "name": "Create SQL Snippet (Bob)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{bobToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"SQL Join Example\",\n  \"code\": \"SELECT users.name, orders.total\\nFROM users\\nINNER JOIN orders ON users.id = orders.user_id\\nWHERE orders.status = \\\"completed\\\";\",\n  \"language\": \"sql\",\n  \"description\": \"Basic SQL inner join\",\n  \"tags\": [\"sql\", \"database\", \"joins\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/snippet",
              "host": ["{{baseUrl}}"],
              "path": ["api", "snippet"]
            }
          }
        },
